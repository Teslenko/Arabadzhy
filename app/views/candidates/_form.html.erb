    </tr>

    <tr>
      <td  class="col-md-2 left"><%= form.label :expected_salary %></td>
      <td class="right"><%= form.text_area :expected_salary, id: :candidate_expected_salary %></td> <!--Expected Result of Salary Candidate-->
    </tr>

    <tr>
      <td  class="col-md-2 left"><%= form.label :final_salary %></td>
      <td class="right"><%= form.text_area :final_salary, id: :candidate_final_salary %></td> <!--Finale Salary When Candidate commen in job-->
    </tr>

    <tr>
      <td  class="col-md-2 left"><%= form.label :data_from %></td>
