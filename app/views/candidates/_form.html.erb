      <td  class="col-md-2 left"><%= form.label :level_skills %></td>
      <td class="right"><%= form.text_area :level_skills, id: :candidate_level_skills %></td> <!-- IOS or Java-->
    </tr>

    <tr>
      <td  class="col-md-2 left"><%= form.label :suggest_project %></td>
