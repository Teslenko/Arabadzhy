<h1> Black list </h1>
<% if @blists.present? %>
	
		<table class="table">
      <div style="padding-left: 20px">
      <%= link_to 'Вернуться к каталогу', candidates_path, class: "btn btn-large btn-primary" %>
        </div>
		  <thead>
		    <tr>
		    	<th></th>
		      <th>Название</th>
		      <th>Описание</th>
		      <th>Статус</th>
		       <th colspan="3"></th>
		    </tr>
		  </thead>
		  <tbody>
		  <% @blists.each do |blist| %>	
		    <tr>
          <td><%= link_to (image_tag blist.image.thumb.url), candidate_path(blist) %></td>
		      <td><%= blist.name %></td>
		      <td><%= blist.description %></td>

		      <td><%= blist.status %></td>
		      <td><%= link_to 'Просмотр', candidate_path(blist), class: 'btn btn-primary' %></td>
		    </tr> 
		  <% end %>     
		  </tbody>



		</table>
  <div style="padding-left: 20px">
  <%= link_to 'Вернуться к каталогу', root_path, class: "btn btn-large btn-primary" %>
  </div>
	<% else %>
	 <h3>No candidates in your black list</h3>	
<% end %>
