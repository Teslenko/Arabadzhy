<!DOCTYPE html>
<html>
<!--////////head//////-->
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<!--////////body//////-->
<body>
<p id="notice"><%= notice %></p>
<h1>Candidates</h1>
<div style="padding-left: 10px;
    position: relative;" >

  <%= link_to 'Создать Новый Товар', new_candidate_path, class: 'btn btn-primary', type: "button" %>
  <%= link_to 'Проданный Товар', black_list_path, class: 'btn btn-primary', type: "button" %>
  <%= link_to 'Резерв', reserved_path, class: 'btn btn-primary', type: "button" %>

 <b style="text-align: right;
     position: absolute;
     right: 45px;">
   <%= link_to 'Export Candidates of Exel', candidates_path+".csv", class: 'btn btn-primary', type: "button" %>
 </b>
  <br>
</div>


<br>
<table class="table  table-striped fixedtable" >
  <thead>
    <tr>
      <th></th>
      <th>Название</th>
      <th>Описание</th>
      <!--<th></th>-->
      <th>Статус Товара</th>
      <th></th>

      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @candidates.each do |candidate| %>
      <tr>
        <td> <% if candidate.image.present? %>
            <%= link_to (image_tag candidate.image.thumb.url), candidate_path(candidate), class: "img-responsive" %>
            <% else %>
            can't upload image
            <% end %>
        </td>
        <td><%= candidate.name %></td>
        <td><%= candidate.description %></td>
        <td><%= candidate.status %></td>
        <td><%= link_to 'Просмотр', candidate,class: "btn btn-large btn-primary", type: "button" %></td>
        <td><%= link_to 'Редактировать', edit_candidate_path(candidate),class: "btn btn-large btn-primary", type: "button" %></td>
        <td >
            <%= link_to 'Удалить', candidate, method: :delete,
                         data: { confirm: 'Вы уверенны, что хотите удалить?' },class: "btn btn-large btn-primary", type: "button" %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>


<div style="padding-left: 10px" >
  <%= link_to 'Создать Новый Товар', new_candidate_path, class: 'btn btn-primary',  class: "btn btn-large btn-primary", type: "button" %>
  <%= link_to 'Проданный Товар', black_list_path, class: 'btn btn-primary',  class: "btn btn-large btn-primary", type: "button" %>
  <%= link_to 'Резерв', reserved_path, class: 'btn btn-primary',  class: "btn btn-large btn-primary", type: "button" %>
  <br>
</div>



</body>
</html>
